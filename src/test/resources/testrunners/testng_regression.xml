<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Opencart App Regression Suite" thread-count="4"
	parallel="tests" verbose="4">
	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>

	<test name="Login Test Chrome">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="140" />
		<parameter name="testname" value="Login Test Chrome" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test> <!-- Test -->

	<test name="Login Test Firefox">
		<parameter name="browser" value="firefox" />
		<parameter name="browserversion" value="140" />
		<parameter name="testname" value="Login Test Firefox" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test> <!-- Test -->

	<test name="Login Test Edge">
		<parameter name="browser" value="edge" />
		<parameter name="browserversion" value="140" />
		<parameter name="testname" value="Login Test Edge" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test> <!-- Test -->
